@model CreateCategoryVM

@{
   ViewData["Title"] = $"Creating News Category Preference for {Model.User.FirstName}";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
   <div class="col-md-4">
      <form asp-action="Create">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <select asp-for="Name" class="form-control">
               <option value="Choose">Choose one:</option>
               @foreach (var categoryName in Model.NewsCategories)
               {
                  <option value="@categoryName">@categoryName</option>
               }
            </select>
         </div>
         <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
         </div>
      </form>
   </div>
</div>

<div>
   <a asp-action="Manage" asp-controller="Profile">Back to Manage Profile</a>
</div>

